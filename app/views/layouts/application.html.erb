<!DOCTYPE html>
<html>
<head>
  <title>TheRightReasons</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'The Right Reasons', root_path, class: "navbar-brand" %>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Leagues', leagues_path %></li>
          <li><%= link_to 'Contestants', contestants_path %></li>
          <li><%= link_to 'Episode Points', episode_points_path %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

<div class="container-fluid" role="main">

  <%= yield %>

</div>

</body>
</html>
